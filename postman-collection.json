              "raw": "{\n  \"title\": \"Test Form\",\n  \"description\": \"A test form for API validation\",\n  \"fields\": [\n    {\n      \"type\": \"text\",\n      \"label\": \"Full Name\",\n      \"required\": true\n    },\n    {\n      \"type\": \"text\",\n      \"label\": \"Email Address\",\n      \"required\": true\n    }\n  ],\n  \"createdById\": \"1\"\n}"
